{
  "name": "dpb-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for PHP dependency analysis, PSR-4 validation, and multi-repo management",
  "type": "module",
  "bin": {
    "dpb-mcp": "./build/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
